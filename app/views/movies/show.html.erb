<h1><%= @movie.title %><h1>

<p><b>Creation Year: <%= @movie.creation_year %><br>
<p><b>Genre: <%= @movie.genre %><br>

<p><b>Actors: <% @movie_actors.each do |actor| %><br>
    <%= actor.name %>
    <%= actor.age %>
    <% end  %>

<p><b>Average Age: <%= @movie_actors.average_age %><br>

  <%= form_with url: "/movies/#{@movie.id}/actors", method: :post, local: true do |f| %>
      <%= f.label :name %>
      <%= f.text_field :name %>
      <%= f.submit 'Add Actor' %>
  <% end  %>
